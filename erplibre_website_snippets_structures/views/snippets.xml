  <!-- Add snippets to menu -->
  <template id="add_snippet_structure_to_menu" inherit_id="website.snippets">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
      <t t-snippet="erplibre_website_snippets_structures.s_steps" t-thumbnail="/erplibre_website_snippets_structures/static/src/img/steps.png"/>
      <t t-snippet="erplibre_website_snippets_structures.s_five_part_panel" t-thumbnail="/erplibre_website_snippets_structures/static/src/img/five_part_panel.png"/>
      <t t-snippet="erplibre_website_snippets_structures.s_linked_image_grid" t-thumbnail="/erplibre_website_snippets_structures/static/src/img/linked_image_grid.png"/>
    </xpath>
  </template>

  <!-- Add snippets options -->
  <template id="snippet_options" inherit_id="website.snippet_options">
    <xpath expr=".">
      <!-- Background Image -->
      <div data-js="background" 
          data-selector=".linked_image">
          <a tabindex="-1" href="#" class="dropdown-item" data-choose-image="true" data-no-preview="true"><i class="fa fa-picture-o"/>Background Image</a>
      </div>

     <!-- Background Position-->
      <div data-js="background_position"
          data-selector=".linked_image">
          <a tabindex="-1" href="#" class="dropdown-item background_position_li" data-background-position="true" data-no-preview="true"><i class="fa fa-arrows"/>Background Image Sizing</a>
      </div>
    </xpath>
  </template>

  <!-- Add stylesheets -->
  <template id="assets_frontend_erplibre_website_snippets_structures" inherit_id="website.assets_frontend">
    <xpath expr="//link[last()]" position="after">
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets_structures/static/src/scss/snippet_steps.scss" />
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets_structures/static/src/scss/snippet_five_part_panel.scss" />
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets_structures/static/src/scss/snippet_linked_image_grid.scss" />
    </xpath>
  </template>
</odoo>
