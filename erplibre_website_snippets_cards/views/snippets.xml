  <!-- Add snippets to menu -->
  <template id="add_snippet_structure_to_menu" inherit_id="website.snippets">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
      <t t-snippet="erplibre_website_snippets_cards.s_cards_extend" t-thumbnail="/erplibre_website_snippets_cards/static/src/img/cards_extend.png"/>
      <t t-snippet="erplibre_website_snippets_cards.s_cards_flip" t-thumbnail="/erplibre_website_snippets_cards/static/src/img/cards_flip.png"/>
    </xpath>
  </template>

  <!-- Add snippets options -->
  <template id="snippet_options" inherit_id="website.snippet_options">
    <xpath expr=".">
      <!-- Flippable options-->
      <div data-selector=".o_card_flip">
        <div class="dropdown-submenu">
          <a tabindex="-2" href="#" class="dropdown-item">
            <i class="fa-mail-forward"/>Flip on Click?
          </a>
          <div class="dropdown-menu" role="menu">
            <a href="#" class="dropdown-item" data-toggle-class="flippable">Yes/No</a>
          </div>
        </div>
      </div>

      <!-- Color options -->
			<div data-js="colorpicker" data-selector=".card-flip__front, .card-flip__back">
        <div class="dropdown-submenu">
          <a tabindex="-1" href="#" class="dropdown-item">
            <i class="fa fa-eyedropper"/>Color
          </a>
          <div class="dropdown-menu" role="menu"/>
        </div>
      </div>
    </xpath>
  </template>

  <!-- Add stylesheet & javascript-->
  <template id="assets_frontend_erplibre_website_snippets_cards" inherit_id="website.assets_frontend">
    <xpath expr="//link[last()]" position="after">
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets_cards/static/src/scss/snippet_cards_extend.scss" />
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets_cards/static/src/scss/snippet_cards_flip.scss" />
    </xpath>

    <xpath expr="//script[last()]" position="after">
      <script type="text/javascript" src="/erplibre_website_snippets_cards/static/src/js/website_snippet_animation_cards_flip.js"/>
      <script type="text/javascript" src="/erplibre_website_snippets_cards/static/src/js/website_snippet_animation_cards_extend.js"/>
    </xpath>
  </template>
